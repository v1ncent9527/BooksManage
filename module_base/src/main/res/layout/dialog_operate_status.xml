<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="dialogVM"
            type="com.vincent.android.architecture.base.widget.dialog.vm.BaseDialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_black_alpha_80_4"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_30"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_16">

        <ImageView
            android:id="@+id/img_status"
            style="@style/img_dp24"
            android:src="@drawable/svg_operate_success" />

        <TextView
            style="@style/text_font16"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@{dialogVM.title}"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>