<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="资源"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/search"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <SearchView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:queryHint="查找课程"
            android:iconifiedByDefault="false"
            android:queryBackground="@null"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_filter"
            android:scaleType="fitXY"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ads3"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ads4"
            android:scaleType="fitXY"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:textColor="#1F1F39"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:text="选择课程"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">
        
        <Button
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:background="@drawable/resource_bt_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:text="全部"/>

        <Button
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:background="@drawable/resource_bt_un_bg"
            android:textColor="#848496"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:text="流行"/>

        <Button
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:background="@drawable/resource_bt_un_bg"
            android:textColor="#848496"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:text="最新"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clg"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_2"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/cls"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1F1F39"
                android:textSize="14sp"
                android:text="C语言课程1.0"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">
                
                <ImageView
                    android:layout_width="8.5dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_people"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B8B8D2"
                    android:textSize="12sp"
                    android:text="阿里小白老师"
                    android:layout_marginStart="5dp"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D43030"
                    android:textSize="16sp"
                    android:text="16小时"/>

                <Button
                    android:layout_width="57dp"
                    android:layout_height="15dp"
                    android:background="@drawable/resource_bt_video_bg"
                    android:textSize="11sp"
                    android:textColor="#FEA164"
                    android:text="视频"
                    android:gravity="center"
                    android:layout_marginStart="5dp"/>

                
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>