<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

        <variable
            name="indexVM"
            type="com.vincent.android.architecture.main.index.IndexViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_52"
            android:background="@drawable/shape_circle_base"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_font14"
                android:text="信用分"
                android:textColor="@color/white" />

            <TextView
                style="@style/text_font32_numeric"
                android:layout_marginTop="@dimen/padding_universal"
                android:text="@{indexVM.score}"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            style="@style/divider"
            android:layout_marginTop="@dimen/dp_52" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                onClickCommand="@{indexVM.booksIntroductionClick}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_click_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/svg_books_introduction" />

                <TextView
                    style="@style/text_font16"
                    android:layout_marginBottom="@dimen/padding_universal"
                    android:text="在借书籍简介"
                    android:textStyle="bold" />
            </LinearLayout>

            <View style="@style/divider_vertical" />

            <LinearLayout
                onClickCommand="@{indexVM.historyOrderClick}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_click_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/svg_history_order" />

                <TextView
                    style="@style/text_font16"
                    android:layout_marginBottom="@dimen/padding_universal"
                    android:text="历史订单信息"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/divider" />
    </LinearLayout>
</layout>