<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

        <variable
            name="rvModel"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_universal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book_cover_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_universal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/text_font16"
                android:layout_weight="1"
                android:text="《长安的荔枝》"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                style="@style/text_font14"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_weight="1"
                android:text="将于2024/4/1号到期"
                android:textColor="@color/black_alpha_50"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            style="@style/text_font16"
            android:background="@drawable/shape_gray_button"
            android:paddingHorizontal="@dimen/padding_universal"
            android:paddingVertical="@dimen/dp_4"
            android:text="归还"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>
</layout>