<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="291dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/my_dialog_style"
        android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="57dp"
                android:src="@drawable/avatar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#1F1F39"
                    android:text="C语言"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#848496"
                    android:textSize="12sp"
                    android:text="您的最新课程"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#848496"
                android:textSize="12sp"
                android:text="下一节课时间"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#848496"
                android:textSize="12sp"
                android:text="学习任务"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#848496"
                android:textSize="12sp"
                android:text="周五\n下午13：30-15：05"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#848496"
                android:textSize="12sp"
                android:text="完成《指针》相关练习"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#848496"
            android:textSize="12sp"
            android:text="学习成绩"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1F1F39"
                android:textSize="20sp"
                android:text="80"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848496"
                android:textSize="12sp"
                android:text="分"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1F1F39"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="本周打卡记录"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_red"
                android:textSize="12sp"
                android:gravity="center"
                android:text="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_red"
                android:textSize="12sp"
                android:gravity="center"
                android:text="2" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_red"
                android:textSize="12sp"
                android:gravity="center"
                android:text="3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_red"
                android:textSize="12sp"
                android:gravity="center"
                android:text="4" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_green"
                android:textSize="12sp"
                android:gravity="center"
                android:text="5" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_green"
                android:textSize="12sp"
                android:gravity="center"
                android:text="6" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textColor="@color/white"
                android:background="@drawable/course_bg_green"
                android:textSize="12sp"
                android:gravity="center"
                android:text="7" />


        </LinearLayout>

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/course_bt_bg"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>
    
    <Button
        android:id="@+id/dialog_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_bt"/>
</LinearLayout>